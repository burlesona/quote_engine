= title quotes_title(@source, @category)
%h1= quotes_title(@source, @category)

%table
	%thead
		%tr
			%th Quote
			%th Context
			%th By
			%th Category
	%tbody
		- @quotes.each do |quote|
			%tr
				%td= quote.content
				%td= quote.context
				%td= link_to quote.source, quote.source
				%td= link_to quote.category, quote.source